<div data-role="page">

  <div data-role="header collapsible" class="heading">
    <div id="headtitle" class="ui-btn-left">
   Edit 
    </div>
    <img id="icon" class ="ui-btn-right" src="<%= @pic %>">
  </div>
  <!-- closes header div -->


<%= form_for @wishlist, method: "PUT"  do |f| %>
      <%= f.text_field :title, :class => 'newfield', :placeholder => "wishlist name" %>
    

    <%= f.text_area :description, :class => 'newfield', :placeholder => "add a description (optional)" %>

<div class="ui-field-contain" id="choosetheme">
  <select name="wishlist[kind]">
    <option>choose a theme</option>
    <option value="christmas">Christmas</option>
    <option value="birthday">Birthday</option>
    <option value="wedding">Wedding</option>
    <option value="other">Other</option>
  </select>
</div>
  <!-- closes controlgroup fieldset -->

  <%= f.text_field :date, id: "datepicker", :class => 'newfield', :placeholder => "event date"%>

  <button data-icon="carat-r" data-iconpos="right">
    <%= f.submit 'save & return to view all', :class => 'submitbutton' %>
    </button>
  <br>
<% end %>
<!-- closes form -->

<!-- slide menu panel -->
<div class="menu" id="menu">
<ul>
  <li><a href="#">claimed items</a></li>
  <li><%= link_to "log out", logout_path %></li>
</ul>
</div>

<div data-role="footer" data-position="fixed" data-tap-toggle="false">
    <div data-role="navbar">
      <ul>
        <li><a href="/wishlists" data-icon="bullets"> All Lists</a></li>
        <li><a href="/wishlists/new" data-icon="plus">New List</a></li>
        <li><a href="#" onclick="Gimme.showMenu()" class="morebutton" data-icon="star">More</a></li>
      </ul>
    </div>
  </div>

</div>
<!-- closes data-role div -->
