

<!-- Entire list item. Has the click listener. Id = the id of the item. -->
<!-- if the item has been claimed give it the class claimed -->
{{#if claimName}}
<li class="listitem claimed" id="{{itemId}}">
{{else}}
<li class="listitem" id="{{itemId}}">
{{/if}}


	<!-- Wrapper for all of the list item's things (title, img, descrip, link) -->
	<div class="listcontents">
	
	<!-- item title -->
		<div class="itemlisttitle">
		{{name}}
		</div>
	<!-- item image -->
		{{#if pic}}
		<img class="listpic smlistpic ui-li-icon" src="{{pic}}">
		{{/if}}

	<!-- Wrapper for additional item info, shown onclick-->
		<div class="hide listinfo">

		{{#if description}}
			{{description}}<br>
		{{else}}
			no details available<br>
		{{/if}}

		{{#if url}}
			<a href="{{url}}" id="itemurl" target="_blank">view online</a>
		{{/if}}


<!-- if the item has been claimed display the name of the user who claimed it -->
		{{#if userId}}
			{{#if claimName}}
			<br>
				claimed by {{claimName}}
			{{else}}
				<button class="detailsbutton" id="claim{{itemId}}" onclick="Wishes.claim({{itemId}}, {{userId}})">Claim</button>
				<button class="detailsbutton hide" id="unclaim{{itemId}}" onclick="Wishes.unclaim({{itemId}})">Unclaim</button>
			{{/if}}
		{{else}}
				<button class="detailsbutton" id = "editbutton" onclick="Wishes.editForm({{itemId}})">edit</button>
				<button class="detailsbutton" onclick="Wishes.delete({{itemId}})">delete</button>
		{{/if}}
		{{#if unclaim}}
			<button class="detailsbutton" id="unclaim{{itemId}}" onclick="Wishes.unclaim({{itemId}})">unclaim</button>
			<button class="detailsbutton hide" id="claim{{itemId}}" onclick="Wishes.claim({{itemId}}, {{userId}})">claim</button>
		{{/if}} 

		</div>
		<!-- closes additional info div -->
	</div>
	<!-- close listhead -->
</li>
<!-- close entire list item -->
